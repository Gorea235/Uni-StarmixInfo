@model StarmixInfo.Models.Data.Project
@{
    ViewData["Title"] = "Project " + Model.Name;
}

@if (Model == null) {
    <div class="row">
        <div class="col-sm-12">
            <h1>Unable to find project</h1>
        </div>
    </div>
}
else {
    <div class="row">
        <div class="col-sm-12">
            <h1>@Model.Name</h1>
    	</div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p>@Model.ShortDesc</p>
    	</div>
    	<div class="col-sm-3 col-sm-offset-3">
            <a class="btn btn-default" href="/Projects/@Model.ProjectID/Builds" style="float: right;">View Builds</a>
    	</div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12 proj-long-desc-col">
            <div class="container-fluid"> @* long desc is html code in this div block *@
                <!-- long description HTML raw injection -->
                @Html.Raw(Model.LongDesc)
			    <!-- finished long description raw injection -->
		    </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <h3>Documentation</h3>
	    </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <iframe src="https://drive.google.com/embeddedfolderview?id=@(Model.GDocFolderID)#list" style="width:100%; height:450px; border:0;"></iframe>
    	</div>
    </div>
}
