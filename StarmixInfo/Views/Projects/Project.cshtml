@model StarmixInfo.Models.Data.Project
@{
    ViewData["Title"] = "Project " + Model.Name;
}

@section Styles {
    <style>
        .gdoc-embed {
            overflow-x: scroll;
            width: 100%;
            height: 450px;
        }

        @@media screen and (max-width: 700px) {
            .gdoc-embed {
                width: 95%;
            }
        }

        .gdoc-embed iframe {
            width: 100%;
            height: 450px;
            border: 0;
        }
    </style>
}

@if (Model == null) {
    <div class="row">
        <div class="col-sm-12">
            <h1>Unable to find project</h1>
        </div>
    </div>
}
else {
    <div class="row">
        <div class="col-sm-12">
            <h1>@Model.Name</h1>
    	</div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p>@Model.ShortDesc</p>
    	</div>
    	<div class="col-sm-3 col-sm-offset-3">
            <a class="btn btn-default" style="float: right;" asp-action="ProjectBuilds" asp-route-id="@Model.ProjectID">View Builds</a>
    	</div>
    </div>
    <hr />
    @Html.Partial("_ProjectLongDesc", Model.LongDesc)
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <h3>Documentation</h3>
	    </div>
    </div>
    <div class="row">
        <div class="col-sm-12 gdoc-embed">
            <iframe src="https://drive.google.com/embeddedfolderview?id=@(Model.GDocFolderID)#list"></iframe>
    	</div>
    </div>
}
