@model StarmixInfo.Models.Data.Project
@{
    ViewData["Title"] = "Home Page";
}

@if (Model == null) {
    <div class="row">
        <h1>No project set as current</h1>
    </div>
}
else {
    <div class="row">
	    <div class="col-sm-12">
            <h1>@Model.Name</h1>
    	    <p>@Model.ShortDesc</p>
		</div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12 proj-long-desc-col">
		    <div class="container-fluid"> @* long desc is html code in this div block *@
                <!-- long description HTML raw injection -->
                @Html.Raw(Model.LongDesc)
			    <!-- finished long description raw injection -->
		    </div>
		</div>
    </div>
    <div class="row" style="margin-top: 20px;">
        <div class="col-sm-3">
            <a class="btn btn-primary" href="/Projects/@Model.ProjectID">View Details</a>
	    </div>
	    <div class="col-sm-3 col-sm-offset-6">
            <a class="btn btn-default" href="/Projects/@Model.ProjectID/Builds" style="float: right;">View Builds</a>
	    </div>
    </div>
}
