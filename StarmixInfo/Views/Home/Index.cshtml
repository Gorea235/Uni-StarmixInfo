@model StarmixInfo.Models.Data.Project
@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        #central-hall {
            width: calc(100% + 10px);
            height: 520px;
            margin: 0;
            margin-left: -5px;
            margin-right: -5px;
            margin-bottom: -20px;
            padding: 0;

            background-image: url("/images/central-hall-pixelated-with-sign.png");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        #central-hall.hide-game {
            height: 200px;
        }

        .hide-game .webgl-content {
            display: none;
        }
    </style>
}

@section Scripts {
    <script src="~/game/TemplateData/UnityProgress.js"></script>
    <script src="~/game/Build/UnityLoader.js"></script>
}

@section PreBody {
    <div id="central-hall">
        <div class="webgl-content">
            <div id="gameContainer" style="width: 700px; height: 450px">
                <button onclick="loadGame()">Click to start game...</button>
            </div>
            <div class="footer">
                <div class="webgl-logo"></div>
                <div class="fullscreen" onclick="gameInstance && gameInstance.SetFullscreen(1)"></div>
                <div class="title">University Domination</div>
            </div>
        </div>
    </div>
}

@if (Model == null) {
    <div class="row">
        <div class="col-sm-12">
            <h1>No project set as current</h1>
    	</div>
    </div>
}
else {
    <div class="row">
        <div class="col-sm-12">
            <h1>@Model.Name</h1>
    	    <p>@Model.ShortDesc</p>
    	</div>
    </div>
    <hr />
    @Html.Partial("_ProjectLongDesc", Model.LongDesc)
    <div class="row" style="margin-top: 20px;">
        @Html.Partial("_ProjectViewButtons", (Model, true))
    </div>
}
